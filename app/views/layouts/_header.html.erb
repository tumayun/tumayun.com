<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to t('brand'), root_path, class: 'brand' %>
      <div class="container nav-collapse">
        <ul class="nav nav-pills pull-right">
          <% if user_signed_in? %>
            <li class="dropdown" id="user_menu">
              <a href="#user_menu" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user">  </i><%= current_user.name %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="<%= edit_user_registration_path %>"><i class="icon-pencil"></i> <%= t('.edit_user') %></a></li>
                <li class="divider"></li>
                <li><a href="<%= destroy_user_session_path %>" data-method="delete" rel="nofollow"><i class="icon-off"></i> <%= t('.sign_out') %></a></li>
              </ul>
            </li>
          <% else %>
            <% if !new_user_session_page? && !create_user_session_page? %>
              <li><%= link_to t('.sign_in'), new_user_session_path, class: 'btn btn-info' %></li>
            <% end %>
            <% if !new_user_registration_page? && !create_user_registration_page? %>
              <li><%= link_to t('.sign_up'), new_user_registration_path, class: 'btn btn-info' %></li>
            <% end %>
            <% if !new_user_confirmation_page? && !create_user_confirmation_page? %>
              <li><%= link_to t('.resend_confirmation'), new_user_confirmation_path, class: 'btn btn-link' %></li>
            <% end %>
            <% if !new_user_password_page? && !create_user_password_page? %>
              <li><%= link_to t('.forget_pass'), new_user_password_path, class: 'btn btn-link' %></li>
            <% end %>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>
